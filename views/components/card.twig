{% macro render(id, title, image, path) %}
    <div class="card mb-4">
        <img src="/../../storage/{{ image }}" class="card-img-top" alt="Imagem referente ao comprovante {{ title }}">
        <div class="card-body">
            <h5 class="card-title">{{ title }}</h5>
            <p class="card-text">{{ path }}</p>
            <div class="d-flex justify-content-between align-items-center">
                <a href="/receipt/edit?id={{ id }}" class="btn btn-sm btn-primary">Editar</a>
                <form action="/receipt/remove" method="post">
                    <input type="hidden" value="{{ id }}" name="id">
                    <button type="submit" class="btn btn-sm btn-danger">Remover</button>
                </form>
            </div>
        </div>
    </div>
{% endmacro %}