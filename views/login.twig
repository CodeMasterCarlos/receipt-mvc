{% extends "layouts/main.twig" %}
{% import 'components/header.twig' as header %}
{% import '@components/messageError.twig' as errorForm %}

{% block head %}
    <link rel="stylesheet" href="/css/jumbotron.css">
    <link rel="stylesheet" href="/css/auth.css">
{% endblock %}

{% block title %}Entra na conta{% endblock %}

{% block content %}
    <main class="jumbotron-container">
        <div class="container">
            <div class="position-relative p-1 text-muted bg-body border border-dashed rounded-5">
                <h1 class="title text-center">Login</h1>
                <form class="p-3" action="/login" method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" class="form-control" id="email" name="email" value="{{ utils.getParamQuery("email") }}" required>
                        {{ errorForm.render('email') }}
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Senha:</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                        {{ errorForm.render('password') }}
                    </div>
                    <div class="mb-3 d-flex justify-content-end">
                        <a href="/register" class="auth-link">NÃ£o tem uma conta? Crie agora</a>
                    </div>
                    <div class="d-flex justify-content-end mt-5">
                        <button type="submit" class="btn btn-success w-50">Entrar</button>
                    </div>
                </form>
            </div>
        </div>
    </main>

{% endblock %}