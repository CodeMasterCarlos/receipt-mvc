{% extends "layouts/main.twig" %}
{% import 'components/header.twig' as header %}
{% import 'components/card.twig' as card %}

{% block title %}Buscando comprovante por edp{% endblock %}

{% block head %}
    <link rel="stylesheet" href="/css/card.css">
{% endblock %}

{% block content %}
    {{ header.render() }}

    <main>
        <div class="container">
            <h1 class="title">Comprovantes relacionados a busca: <span class="text-primary">{{ search }}</span></h1>
            <div class="row mt-3">
                {% for receipt in receipts %}
                <div class="col-xl-3 col-lg-4 col-md-6">
                    {{ card.render(receipt.id, receipt.title, receipt.image, receipt.getPath()) }}
                </div>
                {% endfor %}
            </div>
        </div>
    </main>

{% endblock %}